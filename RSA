def fermat(prime):
	a = random.randint(2,prime-1)
	if(pow(a, prime-1,prime) == 1):
		return True
	else:
		return False

def randomPrime():
	userinput = int(input("How many digits long you want your prime number to be: "))
	#this will generate a 10 digits number
	
	while True:
		Prime = random.randint(10**(userinput - 1), (10**userinput) - 1)
		test = 0
		while (True):
			if(fermat(Prime)):
				test = test + 1
			else:
				break
			if(test == 10): #Make sure it checks 10 consecutive times before giving the prime number
				return Prime



"""Extended Euclidean Algorithm"""
def egcd(a, b):
    x,y, u,v = 0,1, 1,0
    while a != 0:
        q, r = b//a, b%a
        m, n = x-u*q, y-v*q
        b,a, x,y, u,v = a,r, u,v, m,n
    gcd = b
    return gcd, x, y

"""To find D"""	
def modinv(e, n):
    gcd, x, y = egcd(a, m)
    if gcd != 1:
        return None  # modular inverse does not exist
    else:
        return x % m

"""Return d,n"""		
def function(e,p,q):
	n = p*q
	d = modinv(e,n)
	
	if((d*e)%((p-1)*(q-1))==1):
		return d, n
		
"""RSA Encryption"""
def encryption(e,n, m):
	M = ord(m[0])
	for count in range(len(m) - 1):
		M = (M * 128) + ord(m[count + 1])
		
	
	C = pow(M, e, n)
	return C

"""RSA Decryption"""
def decryption(d,n,c):
	M = pow(c,d,n)
	
	mystring[]
	while(True)
		mystring.append(chr(M%128))
		M = M/128
		if(M < 128):
			mystring.append(chr(M))
			break
	mystring = mystring.reverse()
	
	return mystring
	

	


	

