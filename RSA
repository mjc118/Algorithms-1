def fermat(prime):
	a = random.randint(2,prime-1)
	if(pow(a, prime-1,prime) == 1):
		return True
	else:
		return False

def randomPrime():
	userinput = int(input("How many digits long you want your prime number to be: "))
	#this will generate a 10 digits number
	
	while True:
		Prime = random.randint(10**(userinput - 1), (10**userinput) - 1)
		test = 0
		while (True):
			if(fermat(Prime)):
				test = test + 1
			else:
				break
			if(test == 10): #Make sure it checks 10 times consecutive before giving the prime number
				return Prime
				
